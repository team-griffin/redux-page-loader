{
  "name": "@team-griffin/redux-page-loader",
  "version": "0.4.0",
  "main": "dist/cjs/redux-page-loader.js",
  "module": "dist/es/redux-page-loader.js",
  "repository": "git@github.com:team-griffin/redux-page-loader.git",
  "author": "Joshua Thornton <joshua.thornton@heg.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "transpile": "babel src -d lib --copy-files",
    "lint": "npm run lint:js && npm run flow",
    "lint:js": "eslint -c ./config/.eslintrc.js 'src/**/*.js'",
    "lint:js:fix": "eslint --fix -c ./config/.eslintrc.js 'src/**/*.js'",
    "flow": "flow check; test $? -eq 0 -o $? -eq 2",
    "build:dev": "cross-env NODE_ENV=development rollup --config ./rollup/development.js",
    "build:prod": "cross-env NODE_ENV=production rollup --config ./rollup/production.js",
    "build:entry": "cross-env NODE_ENV=production rollup --config ./rollup/entry.js",
    "build": "yarn build:dev && yarn build:prod && yarn build:entry",
    "test": "node_modules/.bin/karma start ./config/karma.conf.js",
    "ci": "npm run lint && npm run test && npm run build",
    "postmerge": "yarn",
    "dockerfile:ci": "dockerscript ./docker/ci/dockerfile.js ./docker/ci/Dockerfile",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "prepare": "install-self-peers -- --ignore-scripts"
  },
  "dependencies": {
    "most": "^1.4.1",
    "ramda": "^0.25.0",
    "react-redux": "^5.0.3",
    "recompose": "^0.26.0",
    "redux-actions": "^2.0.1",
    "redux-create-reducer": "^1.1.1",
    "redux-most": "^0.6.2",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@storybook/react": "^3.1.3",
    "@team-griffin/eslint-config": "^3.0.3",
    "@team-griffin/install-self-peers": "^1.1.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.1.21",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-ramda": "^1.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.5.0",
    "cross-env": "^5.1.3",
    "dockerscript": "^0.0.6",
    "eslint": "^4.13.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-react": "^7.5.1",
    "react-dom": "^16.2.0",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-memory": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify-es": "^0.0.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1"
  }
}
